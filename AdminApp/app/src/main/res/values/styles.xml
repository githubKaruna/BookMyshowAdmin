<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvSmall">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvHeading">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tvHomeButtonText">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btSolid">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btOutline">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/c10</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvNumber" parent="tvHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">40sp</item>
    </style>


    <style name="etTextStyle">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="etNumbers" parent="tvSmall">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="homeButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>